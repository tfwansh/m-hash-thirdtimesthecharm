{
  "name": "m-hash-electron",
  "version": "0.1.0",
  "description": "Electron wrapper for frontend-mock",
  "main": "main.js",
  "scripts": {
    "dev": "ELECTRON_DEV=true concurrently \"npm:frontend:start\" \"wait-on http://localhost:5173 && electron .\"",
    "frontend:start": "cd ../frontend-mock && npm install && npm start",
    "build-frontend": "cd ../frontend-mock && npm install && npm run build",
    "start": "electron .",
    "pack": "npm run build-frontend && electron-builder --dir",
    "dist": "npm run build-frontend && electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "fs-extra": "^11.3.1"
  },
  "build": {
    "appId": "org.yourorg.mhash",
    "productName": "MHash",
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../frontend-mock/build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "../frontend-mock/static/",
        "to": "static",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}

